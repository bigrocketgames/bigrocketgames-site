<%= simple_form_for @mobileGame, url: admin_mobile_game_path, method: :put do |f| %>
  <% if @mobileGame.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@mobileGame.errors.count, "error")} prohibited this post from being save:" %>
      </h2>
      <ul>
        <% @mobileGame.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :description, class: "form-control" %>
  </div>

  <span class="form-helper-text"> Write game features as a bullet list </span>
  <div class="form-group">
    <%= f.input :gameFeatures, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :sliderImages, as: 'file', class: "form-control", input_html: { multiple: true } %>
  </div>

  <div class="form-group">
    <%= f.button :submit %>
  </div>

<% end %>