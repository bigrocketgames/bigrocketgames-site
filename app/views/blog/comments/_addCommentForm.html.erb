<%= simple_form_for @comment, remote: true, url: blog_comments_path, method: :post do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@comment.errors.count, "error")} prohibited this form from being sent:" %>
      </h2>
      <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :post_id, as: :hidden, input_html: { :value => "#{@post.slug}"}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Submit Comment" %>
  </div>

<% end %>