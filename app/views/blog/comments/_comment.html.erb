<div class="well">
  <p><%= comment.body %></p>
  <p><span class="quiet"><small>Created: <%= time_ago_in_words(comment.created_at) %> ago</small></span></p>
  <% if !comment.name.nil? %>
    <p><span class="quiet"><small>Created by: <%= comment.name %></small></span></p>
  <% else %>
    <p><span class="quiet"><small>Created by: Anonymous</small></span></p>
  <% end %>
</div>