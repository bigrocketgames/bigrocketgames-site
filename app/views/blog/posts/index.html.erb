<div class="container">

  <h1 class="text-center blog-title">Big Rocket Blog</h1>

  <% @posts.each do |post| %>

  <div class="blog-post-container">
    <h2><%= link_to "#{post.title}", blog_post_path(post.slug), class: "site-link" %></h2>

    <p><%= raw(post.body) %></p>

    <p><%= post.comments.length %> comments</p>
  </div>

  <% end %>

</div>